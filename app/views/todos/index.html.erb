<main class="TodoPageMain">
    <article>
      <h1 class="TodoPage-title">My To-do List</h1>
      <section class="AddTodo">
        <input class="AddTodo-text" type="text" placeholder="what's next?">
        <input class="AddTodo-date" type="date">
        <input class="AddTodo-button" type="button" value="Add">
      </section>
      <%= render partial: "todo-section", locals:
      {section_title: "Overdue", todos: Todo.overdue, show_dueDate: true}%>
      <%= render partial: "todo-section", locals:
      {section_title: "Due Today", todos: Todo.due_today, show_dueDate: false}%>
      <%= render partial: "todo-section", locals:
      {section_title: "Due Later", todos: Todo.due_later, show_dueDate: true}%>
    </article>
  </main>
